    private async Task BaixarArquivo()
    {
        if (zipArquivo != null)
        {
            var base64 = Convert.ToBase64String(zipArquivo);
            var arquivoDados = $"data:application/zip;base64,{base64}";
            await js.InvokeVoidAsync("downloadFile", arquivoDados, "versao.zip");
        }
    }
